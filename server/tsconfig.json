{
  "compilerOptions": {
    /* ✅ Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ✅ Target & Emit */
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,

    /* ✅ Type Definitions */
    "types": ["node", "express", "dotenv"],

    /* ✅ Additional Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
